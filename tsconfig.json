{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*"],
  "typeRoots": ["./node_modules/@types/"]
}
